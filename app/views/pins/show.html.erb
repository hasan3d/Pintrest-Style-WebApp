<div class="row">
  <div class="span6 offset3">
    <%= image_tag @pin.image.url(:medium)%>
    <p>
      <%= @pin.description %>
    </p>
    
    <p>
      <strong>
        Posted by <%= @pin.user.name %>
      </strong>
      
    </p>
    <% if current_user == @pin.user %>
      <%= link_to 'Edit', edit_pin_path(@pin) %> |
    <% end %>  
      <%= link_to 'Back', pins_path %>
  </div>
</div>

